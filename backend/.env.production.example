# Centro de Carreiras Backend - Production Environment Variables
# Copy this file to .env.production and fill in the values

# App Configuration
APP_NAME=Centro de Carreiras API
DEBUG=false

# CORS - Frontend URL(s), comma-separated for multiple origins
FRONTEND_URL=https://centro-carreiras-web-xxxxx.run.app

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
# For Cloud Run, use FIREBASE_SERVICE_ACCOUNT_JSON instead of file path
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Airtable Configuration
AIRTABLE_API_TOKEN=pat_xxxxxxxxxxxxx
AIRTABLE_BASE_ID=appXXXXXXXXXX
AIRTABLE_MENTORS_TABLE=mentores_residentes_prod

# Mixpanel Analytics (optional)
MIXPANEL_TOKEN=your-mixpanel-token

# Resend Email Service (optional)
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM_ADDRESS=Centro de Carreiras <noreply@patronos.org>
EMAIL_ADMIN_CC=contato@patronos.org
