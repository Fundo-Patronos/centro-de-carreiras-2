rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can update their own profile (except role, uid, email)
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email']);

      // Allow create if authenticated and uid matches
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.role in ['estudante', 'mentor'];

      // No client-side delete
      allow delete: if false;
    }

    // Allow students to read active mentor profiles
    match /users/{userId} {
      allow read: if request.auth != null
                  && resource.data.role == 'mentor'
                  && resource.data.status == 'active';
    }
  }
}
